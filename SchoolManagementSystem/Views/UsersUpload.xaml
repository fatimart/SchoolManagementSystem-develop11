<Page x:Class="SchoolManagementSystem.Views.UsersUpload"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="import" Height="490" Width="900" >
    <Grid>
        <Border BorderBrush="Black" BorderThickness="5">
            <StackPanel HorizontalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="0,0,0,5" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Width="890">
                    <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBox Height="30" Name="txtFilePath" Width="550" Margin="10,0,10,0" FontSize="15" Opacity="1" />
                        <Button Content="View Excel Data" Name="btnOpen" Width="120" FontSize="15" Height="30" FontWeight="Bold" Click="btnOpen_Click" />

                    </WrapPanel>

                </Border>
                <Button Content="import To Database" FontSize="15" Height="30" FontWeight="Bold" x:Name="btnimport" Width="170"  Background="#FFEFE5E5" Click="btnimport_Click" />
                <Label x:Name="txtIns" Content="View Uploaded records to DataGridView" FontSize="15" FontWeight="Bold" Margin="15" HorizontalAlignment="Center" Width="282" />

                <DataGrid AutoGenerateColumns="True" IsReadOnly="True" HorizontalAlignment="Center" Name="dtGrid"  Height="330" Width="888" />
            </StackPanel>

        </Border>
    </Grid>
</Page>
